<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>x64;arm64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../core/src/zig/lib/x86_64-windows/*.dll" Pack="true" PackagePath="runtimes/win-x64/native" />
    <None Include="../../core/src/zig/lib/aarch64-windows/*.dll" Pack="true" PackagePath="runtimes/win-arm64/native" />
    <None Include="../../core/src/zig/lib/x86_64-linux/*.so" Pack="true" PackagePath="runtimes/linux-x64/native" />
    <None Include="../../core/src/zig/lib/aarch64-linux/*.so" Pack="true" PackagePath="runtimes/linux-arm64/native" />
    <None Include="../../core/src/zig/lib/x86_64-macos/*.dylib" Pack="true" PackagePath="runtimes/osx-x64/native" />
    <None Include="../../core/src/zig/lib/aarch64-macos/*.dylib" Pack="true" PackagePath="runtimes/osx-arm64/native" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="../../core/src/zig/lib/x86_64-windows/*.dll" Condition="'$(Platform)' == 'x64'" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="../../core/src/zig/lib/aarch64-windows/*.dll" Condition="'$(Platform)' == 'arm64'" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="../../core/src/zig/lib/x86_64-macos/*.dylib" Condition="'$(Platform)' == 'x64'" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="../../core/src/zig/lib/aarch64-macos/*.dylib" Condition="'$(Platform)' == 'arm64'" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="../../core/src/zig/lib/x86_64-linux/*.so" Condition="'$(Platform)' == 'x64'" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="../../core/src/zig/lib/aarch64-linux/*.so" Condition="'$(Platform)' == 'arm64'" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <Target Name="PrintVariables" AfterTargets="Build">
    <Message Text="Value of OS: $(OS)" Importance="high" />
    <Message Text="Value of Platform: $(Platform)" Importance="high" />
  </Target>
</Project>
